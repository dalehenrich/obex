#! /usr/bin/env bash

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name>

Install https://github.com/dalehenrich/obex into the given stone.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) gs_329
"
HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_SERVER}x" = "x" ] ; then
  echo "the GsDevKit_server project has not been installed correctly or the"
  echo "GS_SERVER environment variable has not been defined"
  exit 1
fi

source ${GS_HOME}/bin/private/shFunctions
getOpts_help $@

if [ $# -ne 1 ]; then
  usage; exit 1
fi
stoneName=$1

$GS_HOME/bin/startStone -b $stoneName

stonePath=$GS_SERVER_STONES/$stoneName
if [ ! -d "$stonePath" ] ; then
  echo "The stone $stoneName does not exist"
  exit 1
fi

cd $GS_HOME/shared/repos/tode
git checkout dev
git pull origin dev
cp $GS_HOME/shared/repos/obex/gsDevKit/local/gsdevkit_bin/* $GS_HOME/sys/local/gsdevkit_bin

$GS_HOME/bin/devKitCommandLine todeIt $stoneName << EOF
project load Tode
project install --url=http://gsdevkit.github.io/GsDevKit_home/Obex.ston
project load Obex
EOF


echo "...finished $(basename $0)"
