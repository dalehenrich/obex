#! /usr/bin/env bash

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <client-name>

Install https://github.com/dalehenrich/obex into the given client.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) tode
"
HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_SERVER}x" = "x" ] ; then
  echo "the GsDevKit_server project has not been installed correctly or the"
  echo "GS_SERVER environment variable has not been defined"
  exit 1
fi

source ${GS_HOME}/bin/private/shFunctions
getOpts_help $@

if [ $# -ne 1 ]; then
  usage; exit 1
fi
clientName=$1

clientPath=GS_CLIENT_DEV_CLIENTS/$clientName
if [ ! -d "$clientPath" ] ; then
  echo "The client $clientName does not exist"
  exit 1
fi

cd $GS_HOME/shared/repos/tode
git checkout dev
git pull origin dev
cp $GS_HOME/shared/repo/obex/gsDevKit/local/gsdevkit_bin/* $GS_HOME/sys/local/gsdevkit_bin

cd $clientPath

pharoCmd="$directoryPath/pharo"
imageName=${clientName}.image

$phaorCmd "$directoryPath/$imageName --quit --save --eval "| gs_home | gs_home := Smalltalk os environment at: 'GS_HOME'.  Metacello new baseline: 'Obex'; repository: 'filetree://', gs_home, '/shared/repos/obex/repository'; load: 'Core'"

echo "...finished $(basename $0)"
